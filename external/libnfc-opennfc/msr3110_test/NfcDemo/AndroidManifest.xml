<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mediatek.nfcdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="11" />

    <original-package
        android:name="com.mediatek.nfcdemo" />
        
	<uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
	<uses-permission android:name="android.permission.NFC" />	
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="com.android.launcher.permission.WRITE_SETTINGS" />

    <application android:label="@string/app_name" >
        <activity
            android:name=".NfcDemo"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mediatek.nfcdemo.NfcTests" android:screenOrientation="portrait"></activity>
        <activity android:name="com.mediatek.nfcdemo.FirmwareInfo" android:screenOrientation="portrait"></activity>
        <activity android:name="com.mediatek.nfcdemo.ReaderTests" android:screenOrientation="portrait"></activity>
        <activity android:name="com.mediatek.nfcdemo.CardModeTests" android:screenOrientation="portrait"></activity>
        <activity android:name="com.mediatek.nfcdemo.P2PTests" android:screenOrientation="portrait"></activity>        
        <activity android:name="com.mediatek.nfcdemo.PollingInfo" android:screenOrientation="portrait"></activity>
        <activity android:name="com.mediatek.nfcdemo.FieldDetectInfo" android:screenOrientation="portrait"></activity>
     </application>
</manifest>

