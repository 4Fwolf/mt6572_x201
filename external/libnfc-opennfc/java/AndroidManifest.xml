<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.opennfc.extension.engine">

    <permission
        android:label="NFC Controller Permission"
        android:name="org.opennfc.permission.NFC_CONTROLLER"
		android:description="@string/perm_desc_nfc_controller"
        android:protectionLevel="signatureOrSystem" />

    <permission
        android:label="Secure Element Permission"
        android:name="org.opennfc.permission.SECURE_ELEMENT"
		android:description="@string/perm_desc_secure_element"
        android:protectionLevel="signatureOrSystem" />

    <permission
        android:label="Card Emulation Permission"
        android:name="org.opennfc.permission.CARD_EMULATION"
		android:description="@string/perm_desc_cardEmulation"
        android:protectionLevel="signatureOrSystem" />
    
    <permission
        android:label="Virtual Tag Permission"
        android:name="org.opennfc.permission.VIRTUAL_TAG"
		android:description="@string/perm_desc_virtualTag"
        android:protectionLevel="signatureOrSystem" />

    <permission
        android:label="NFCC Firmware Update Permission"
        android:name="org.opennfc.permission.FIRMWARE_UPDATE"
		android:description="@string/perm_desc_firmware_update"
        android:protectionLevel="signatureOrSystem" />
    
    <permission
        android:label="NFCC Routing Table Permission"
        android:name="org.opennfc.permission.ROUTING_TABLE"
		android:description="@string/perm_desc_routing_table"
        android:protectionLevel="signatureOrSystem" />

    <application android:label="Open NFC Extension" 
        android:icon="@drawable/icon">
		<uses-library android:name="NfcExt" />
     	<service android:name="OpenNfcExtService"
            android:process=":remote" >
		    		<intent-filter>
			<action	android:name="com.opennfc.extension.engine.IOpenNfcExtService" />
		</intent-filter>
		</service>    
	</application>
</manifest>
