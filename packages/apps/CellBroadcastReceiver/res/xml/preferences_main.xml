<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

     <PreferenceCategory
        android:key="category_cell_broadcast_settings"
        android:title="@string/sms_cb_settings" >

        <!-- Enable Cell broadcast -->
        <com.android.cellbroadcastreceiver.CheckBoxAndSettingsPreference
            android:defaultValue="true"
            android:enabled="true"
            android:key="enable_cell_broadcast"
            android:summary="@string/enable_cell_broadcast_summary"
            android:title="@string/cb_other_message_identifiers" />

     </PreferenceCategory>

    <!-- General and CMAS emergency alert settings. -->
    <PreferenceCategory
        android:key="category_alert_settings"
        android:title="@string/emergency_alert_settings_title" >

        <!-- Enable CMAS Presidential Threat alerts -->
        <com.android.cellbroadcastreceiver.CheckBoxAndSettingsPreference
            android:defaultValue="true"
            android:enabled="false"
            android:key="enable_cmas_presidential_threat_alerts"
            android:summary="@string/enable_cmas_presidential_threat_alerts_summary"
            android:title="@string/enable_cmas_presidential_threat_alerts_title" />

        <!-- Enable CMAS Imminent Threat alerts -->
        <com.android.cellbroadcastreceiver.CheckBoxAndSettingsPreference
            android:defaultValue="true"
            android:key="enable_cmas_imminent_threat_alerts"
            android:summary="@string/enable_cmas_imminent_threat_alerts_summary"
            android:title="@string/enable_cmas_imminent_threat_alerts_title" />

        <!-- Enable CMAS Child abduction emergency Threat alerts -->
        <com.android.cellbroadcastreceiver.CheckBoxAndSettingsPreference
            android:defaultValue="true"
            android:key="enable_cmas_amber_threat_alerts"
            android:summary="@string/enable_cmas_amber_alerts_summary"
            android:title="@string/enable_cmas_amber_alerts_title" />

        <!-- Enable Speak alert message -->
        <com.android.cellbroadcastreceiver.CheckBoxAndSettingsPreference
            android:defaultValue="true"
            android:key="enable_cmas_speech_threat_alerts"
            android:summary="@string/enable_alert_speech_summary"
            android:title="@string/enable_alert_speech_title" />

        <!-- Alert Tone Preview -->
        <com.android.cellbroadcastreceiver.AlertTonePreviewDialog
            android:defaultValue="true"
            android:key="cmas_preview_alert_tone"
            android:summary="@string/cmas_preview_alert_tone_summary"
            android:title="@string/cmas_preview_alert_tone_title" />

    </PreferenceCategory>

</PreferenceScreen>
